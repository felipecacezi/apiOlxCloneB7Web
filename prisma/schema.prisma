// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database/database_dev.db"
}

model States {
  id   Int     @id @default(autoincrement())
  name String?
}

model Users {
  id           Int     @id @default(autoincrement())
  name         String?
  passwordHash String
  token        String
  ads          Ads[]
}

model Categories {
  id   Int     @id @default(autoincrement())
  name String?
  slug String
}

model Ads {
  id              Int      @id @default(autoincrement())
  user            Users    @relation(fields: [userId], references: [id])
  userId          Int
  state           String
  category        String
  dateCreated     DateTime
  title           String
  price           Int
  priceNegotiable Int
  description     String
  views           Int
  status          String
}
